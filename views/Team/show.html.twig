{% extends 'layout.html.twig' %}

{% block title %}Teams :: {{ team.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ request.getBaseURL() }}/includes/tipsy/src/stylesheets/tipsy.css" />
{% endblock %}

{% block content %}
    <main class="teams">
        <section class="content_header">
            <article>
                {{ team.rankImageLiteral | raw }}
                <div>
                    <h1>{{ team.name }}</h1>
                    <small>{{ team.elo }}</small>
                </div>

                <div class="buttons">
                    {% if me.canDelete(team) %}
                        <a class="button red" href="{{ team.url('delete') }}"><i class="fa fa-trash-o"></i> Delete</a>
                    {% endif %}

                    {% if me.canEdit(team) %}
                        <a class="button grey notextshadow" href="{{ team.url('edit') }}"><i class="fa fa-pencil"></i> Edit</a>
                    {% endif %}

                    {% if me is valid and me.team.id != team.id and me.isTeamless and team.status == 'open' %}
                        <a class="button grey notextshadow" href="{{ team.url('join') }}"><i class="fa fa-plus"></i> Join</a>
                    {% endif %}

                    {% if me is valid and me.team.id == team.id %}
                        <a class="button grey notextshadow" href="{{ team.url('abandon') }}"><i class="fa fa-sign-out"></i> Abandon</a>
                    {% endif %}
                </div>
            </article>
        </section>

        <section class="profile">
            <section class="row">
                <section class="information">
                    <p><strong>Founded:</strong> {{ team.creationDateFormat }}</p>
                    <article class="description">
                        {{ team.description | raw }}
                    </article>
                </section>

                <section class="profile_picture">
                    <img src="{{ team.avatar | imagine_filter('huge_thumb') }}" class="team_avatar">
                </section>
            </section>

            <section class="row">
                <section class="match_stats">
                    <h4>
                        Match Statistics
                        <small>
                            [<a id="match_stats" href="#" original-title="Like match stats? There's more!">?</a>]
                        </small>
                    </h4>
                    <canvas id="teamMatchStats" class="teamMatchStats"></canvas>
                    <article class="legend">
                        <div class="item">
                            <div class="block wins"></div> {{ 'win'|plural(team.matchesWon) }}
                        </div>
                        <div class="item">
                            <div class="block losses"></div> {{ 'loss'|plural(team.matchesLost) }}
                        </div>
                        <div class="item">
                            <div class="block draws"></div> {{ 'draw'|plural(team.matchesDraw) }}
                        </div>
                    </article>
                </section>

                <section class="activity">
                    <h4>
                        Team Activity
                        <small>
                            [<a id="activity_stats" href="#" original-title="Like activity stats? There's more!">?</a>]
                        </small>
                    </h4>
                </section>
            </section>

            <section class="row">
                <section class="members">
                    <h4>Team Members</h4>
                    <article class="css-table team_members">
                        {% for player in team.members %}
                            <div class="row">
                                <div class="column">
                                    {% if player.id == team.leader.id %}
                                        <i class="fa fa-star" title="Team Leader"></i>
                                    {% endif %}
                                </div>
                                <div class="column">
                                    {{ player.country.flagLiteral | raw }} {{ link_to(player) }}
                                </div>

                                {% if me.hasPermission(constant('Permission::EDIT_TEAM')) or me.id == team.leader.id %}
                                    <div class="column">
                                        <a href="{{ path('team_kick', {team: team.alias, player: player.alias}) }}" title="Kick {{ player.username }} from team">
                                            <i class="fa fa-eject"></i>
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </article>
                </section>

                <section class="matches">
                    <h4>Recent Matches</h4>
                    <ul>
                        {% for match in team.matches %}
                            <li>
                                {{ match.score(team.id) }} - {{ match.opponentScore(team.id) }} {{ match.matchDescription(team.id) }} against {{ link_to(match.opponent(team.id)) }}
                            </li>
                        {% endfor %}
                    </ul>
                </section>
            </section>
        </section>
    </main>
{% endblock %}

{% block javascripts %}
    <script src="{{ request.getBaseURL() }}/includes/chartjs/Chart.min.js"></script>
    <script src="{{ request.getBaseURL() }}/includes/tipsy/src/javascripts/jquery.tipsy.js"></script>
    <script>
        var teamWins   = {{ team.matchesWon }};
        var teamLosses = {{ team.matchesLost }};
        var teamDraws  = {{ team.matchesDraw }};

        $("#match_stats").tipsy({gravity: 's'});
        $("#activity_stats").tipsy({gravity: 's'});
    </script>
    <script src="{{ request.getBaseURL() }}/assets/js/min/teams-ck.js"></script>
{% endblock %}
